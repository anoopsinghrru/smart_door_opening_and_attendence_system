                            <button type="submit" class="search-btn">
                                <span class="btn-icon">üîç</span>
                            </button>
                        </div>

                        <div class="date-container">
                            <label for="startDate" class="date-label">From:</label>
                            <input type="date" id="startDate" name="startDate"
                                value="<%= typeof startDate !== 'undefined' ? startDate : '' %>" class="date-input">
                        </div>

                        <div class="date-container">
                            <label for="endDate" class="date-label">To:</label>
                            <input type="date" id="endDate" name="endDate"
                                value="<%= typeof endDate !== 'undefined' ? endDate : '' %>" class="date-input">
                        </div>
                    </div>

                    <div class="flex justify-end mt-3">
                        <button type="submit" class="filter-btn">
                            <span class="btn-icon">üîé</span> Apply Filters
                        </button>
                        <a href="/attendence" class="reset-btn ml-3">
                            <span class="btn-icon">‚Ü∫</span> Reset
                        </a>
                    </div>
                </form>

                <div class="overflow-x-auto">
                    <table>
                        <tr>
                            <th>User Name</th>
                            <th>Enrollment Number</th>
                            <th>Batch</th>
                            <th>Semester</th>
                            <th>Entry Time</th>
                            <th>Exit Time</th>
                            <th>Stay Time (min)</th>
                        </tr>
                        <% attendances.forEach(att => { %>
                            <tr data-entry-time="<%= new Date(att.entryTime).getTime() %>">
                                <td><%= att.user.name %></td>
                                <td><%= att.user.enrollmentNumber %></td>
                                <td><%= att.user.batch %></td>
                                <td><%= att.user.semester %></td>
                                <td><%= att.entryTime.toLocaleString() %></td>
                                <td><%= att.exitTime ? att.exitTime.toLocaleString() : 'Still inside' %></td>
                                <td><%= att.exitTime ? att.stayTime.toFixed(2) : 'N/A' %></td>
                            </tr>
