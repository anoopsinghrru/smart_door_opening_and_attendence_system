                    <% if (hasPrevPage) { %>
                        <a href="/attendence?page=<%= currentPage - 1 %><%= search ? '&search=' + search : '' %><%= startDate ? '&startDate=' + startDate : '' %><%= endDate ? '&endDate=' + endDate : '' %>" class="pagination-btn">
                            <span class="arrow">‚Üê</span> Previous
                        </a>
                    <% } %>

                    <div class="pagination-info">
                        Page <%= currentPage %> of <%= totalPages %>
                    </div>

                    <% if (hasNextPage) { %>
                        <a href="/attendence?page=<%= currentPage + 1 %><%= search ? '&search=' + search : '' %><%= startDate ? '&startDate=' + startDate : '' %><%= endDate ? '&endDate=' + endDate : '' %>" class="pagination-btn">
                            Next <span class="arrow">‚Üí</span>
                        </a>
