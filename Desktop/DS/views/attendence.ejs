    <script>
        // Socket.IO Connection
        const socket = io();

        // Basic connection handling
        socket.on('connect', function() {
            // Connected to server
        });

        socket.on('connect_error', function(error) {
            // Connection error
        });

        socket.on('disconnect', function() {
            // Disconnected from server
        });

        // Function to format date for display
        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleString();
        }

        // Function to add a new attendance record to the table
        function addAttendanceRecord(attendance) {
            const tableBody = document.querySelector('table');
            if (!tableBody) return;

            // Check if a row for this user and entry time already exists
            const rows = Array.from(tableBody.querySelectorAll('tr:not(:first-child)'));
            const entryTime = new Date(attendance.entryTime).getTime();
            const formattedEntryTime = formatDate(attendance.entryTime);

            // Check if this user already has an entry with the same entry time
            for (let i = 0; i < rows.length; i++) {
                const cells = rows[i].querySelectorAll('td');
                if (cells[0].textContent === attendance.user.name &&
                    cells[4].textContent === formattedEntryTime) {
                    // This user already has an entry with this entry time
                    // Just update the row if needed
                    if (attendance.exitTime && cells[5].textContent === 'Still inside') {
                        cells[5].textContent = formatDate(attendance.exitTime);
                        cells[6].textContent = attendance.stayTime.toFixed(2);

                        // Add highlight effect
                        rows[i].style.backgroundColor = 'rgba(41, 82, 163, 0.3)';
                        setTimeout(() => {
                            gsap.to(rows[i], {
                                backgroundColor: 'rgba(0, 0, 0, 0)',
                                duration: 1.5
                            });
                        }, 1000);
                    }
                    return; // Exit without adding a new row
                }
            }

            // If we get here, no existing row was found, so create a new one
            const newRow = document.createElement('tr');
            newRow.classList.add('fade-in');

            // Store the entry time as a data attribute for sorting
            newRow.setAttribute('data-entry-time', entryTime);
            newRow.setAttribute('data-user-id', attendance.user._id);

            // Add row content
            newRow.innerHTML = `
                <td>${attendance.user.name}</td>
                <td>${attendance.user.enrollmentNumber}</td>
                <td>${attendance.user.batch}</td>
                <td>${attendance.user.semester}</td>
                <td>${formattedEntryTime}</td>
                <td>${attendance.exitTime ? formatDate(attendance.exitTime) : 'Still inside'}</td>
                <td>${attendance.exitTime ? attendance.stayTime.toFixed(2) : 'N/A'}</td>
            `;

            // Get header row
            const headerRow = tableBody.querySelector('tr:first-child');

            // Insert the new row in the correct position based on entry time (newest first)
            let inserted = false;

            if (rows.length === 0) {
                // If no rows exist yet, just append after header
                if (headerRow) {
                    headerRow.insertAdjacentElement('afterend', newRow);
                } else {
                    tableBody.appendChild(newRow);
                }
                inserted = true;
            } else {
                // Find the correct position based on entry time
                for (let i = 0; i < rows.length; i++) {
                    const rowTime = parseInt(rows[i].getAttribute('data-entry-time') || '0');
                    if (entryTime > rowTime) {
                        // This row has an older entry time, insert before it
                        rows[i].insertAdjacentElement('beforebegin', newRow);
                        inserted = true;
                        break;
                    }
                }

                // If not inserted yet, it's older than all existing rows, append at the end
                if (!inserted) {
                    rows[rows.length - 1].insertAdjacentElement('afterend', newRow);
                }
            }

            // Apply hover effect to the new row
            applyRowHoverEffect(newRow);

            // Remove the last row if we have more than 10 rows (to maintain pagination)
            const allRows = tableBody.querySelectorAll('tr');
            if (allRows.length > 11) { // 1 header row + 10 data rows
                allRows[allRows.length - 1].remove();
            }
        }

        // Function to update an existing attendance record
        function updateAttendanceRecord(attendance) {
            const tableRows = document.querySelectorAll('table tr');

            // Find the row with matching user ID
            for (let i = 1; i < tableRows.length; i++) {
                const row = tableRows[i];
                const cells = row.querySelectorAll('td');

                // Check if this is the row we want to update (by comparing name and entry time)
                if (cells[0].textContent === attendance.user.name &&
                    cells[4].textContent === formatDate(attendance.entryTime)) {

                    // Update exit time and stay time
                    cells[5].textContent = formatDate(attendance.exitTime);
                    cells[6].textContent = attendance.stayTime.toFixed(2);

                    // Add highlight effect
                    row.style.backgroundColor = 'rgba(41, 82, 163, 0.3)';
                    setTimeout(() => {
                        gsap.to(row, {
                            backgroundColor: 'rgba(0, 0, 0, 0)',
                            duration: 1.5
                        });
                    }, 1000);

                    break;
                }
            }
        }

        // Listen for attendance updates from the server
        socket.on('attendance_update', function(data) {
            if (data.type === 'new') {
                addAttendanceRecord(data.attendance);
            } else if (data.type === 'update') {
                updateAttendanceRecord(data.attendance);
            }
        });

        // Request initial data when page loads
        document.addEventListener('DOMContentLoaded', function() {
            socket.emit('get_latest_attendance');

            // Listen for initial data
            socket.on('initial_attendance', function(attendances) {
                // Update the table with the latest data
                if (attendances && attendances.length > 0) {
                    // Clear existing rows except the header
                    const table = document.querySelector('table');
                    const rows = table.querySelectorAll('tr:not(:first-child)');
                    rows.forEach(row => row.remove());

                    // Sort attendances by entry time (newest first)
                    attendances.sort((a, b) => {
                        const timeA = new Date(a.entryTime).getTime();
                        const timeB = new Date(b.entryTime).getTime();
                        return timeB - timeA; // Descending order (newest first)
                    });

                    // Add the latest attendance records
                    attendances.forEach(attendance => {
                        addAttendanceRecord(attendance);
                    });
                }
            });

            // Mobile Menu Toggle
            const mobileMenu = document.getElementById('mobile-menu');
            const navLinks = document.getElementById('nav-links');

            if (mobileMenu) {
                mobileMenu.addEventListener('click', function() {
                    navLinks.classList.toggle('active');

                    // Animate hamburger to X
                    const spans = mobileMenu.querySelectorAll('span');
                    if (navLinks.classList.contains('active')) {
                        spans[0].style.transform = 'rotate(45deg) translate(5px, 5px)';
                        spans[1].style.opacity = '0';
                        spans[2].style.transform = 'rotate(-45deg) translate(7px, -6px)';
                    } else {
                        spans[0].style.transform = 'none';
                        spans[1].style.opacity = '1';
                        spans[2].style.transform = 'none';
                    }
                });

                // Close menu when clicking on a link
                const links = navLinks.querySelectorAll('a');
                links.forEach(link => {
                    link.addEventListener('click', function() {
                        navLinks.classList.remove('active');
                        const spans = mobileMenu.querySelectorAll('span');
                        spans[0].style.transform = 'none';
                        spans[1].style.opacity = '1';
                        spans[2].style.transform = 'none';
                    });
                });
            }
        });

        // GSAP Animations
        gsap.registerPlugin(ScrollTrigger);

        // Add glow effect to all buttons
        document.querySelectorAll(".btn, .pagination-btn").forEach(btn => {
            // Add glowing effect to all buttons
            gsap.to(btn, {
                boxShadow: "0 0 15px rgba(41, 82, 163, 0.8)",
                repeat: -1,
                yoyo: true,
                duration: 1.5
            });
        });

        // Special glow for download button
        gsap.to(".download-btn", {
            boxShadow: "0 0 20px rgba(46, 125, 50, 0.8)",
            repeat: -1,
            yoyo: true,
            duration: 1.5
        });

        // Special glow for register button
        gsap.to(".register-btn", {
            boxShadow: "0 0 20px rgba(25, 118, 210, 0.8)",
            repeat: -1,
            yoyo: true,
            duration: 1.5
        });

        // Button hover animations - simplified for performance
        document.querySelectorAll(".btn, .pagination-btn").forEach(btn => {
            btn.addEventListener("mouseenter", () => {
                gsap.to(btn, {
                    scale: 1.05,
                    duration: 0.2
                });
            });

            btn.addEventListener("mouseleave", () => {
                gsap.to(btn, {
                    scale: 1,
                    duration: 0.2
                });
            });
        });

        // Function to apply hover effect to a row
        function applyRowHoverEffect(row) {
            row.addEventListener("mouseenter", () => {
                gsap.to(row, {
                    backgroundColor: "rgba(255, 255, 255, 0.15)",
                    duration: 0.2
                });
            });

            row.addEventListener("mouseleave", () => {
                gsap.to(row, {
                    backgroundColor: "rgba(0, 0, 0, 0)",
                    duration: 0.2
                });
            });
        }

        // Table row hover effect - simplified
        document.querySelectorAll("tr:not(:first-child)").forEach(row => {
            applyRowHoverEffect(row);
        });

        // Simplified background effect

        // Reduce animations on mobile for better performance
        function optimizeForMobile() {
            if (window.innerWidth <= 768) {
                // Disable some animations on mobile
                gsap.globalTimeline.getChildren().forEach(tween => {
                    // Keep essential animations but reduce others
                    if (tween.vars && tween.vars.repeat === -1) {
                        // Slow down infinite animations
                        tween.timeScale(0.7);
                    }
                });
            }
        }

        // Run optimization on load and resize
        window.addEventListener('load', optimizeForMobile);
        window.addEventListener('resize', optimizeForMobile);

        // Function to fetch latest attendance data via AJAX
        function fetchLatestAttendance() {
            // Only fetch if we're connected to avoid duplicate updates
            if (socket.connected) {
                socket.emit('get_latest_attendance');
            }
        }

        // Set up periodic refresh every 30 seconds as a fallback
        setInterval(fetchLatestAttendance, 30000);

        // Add CSS for fade-in animation
        const style = document.createElement('style');
        style.textContent = `
            @keyframes fadeIn {
                from { opacity: 0; transform: translateY(-10px); }
                to { opacity: 1; transform: translateY(0); }
            }
            .fade-in {
                animation: fadeIn 0.5s ease-out forwards;
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
