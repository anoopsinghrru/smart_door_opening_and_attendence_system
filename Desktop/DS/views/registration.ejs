    <script>
        // Mobile Menu Toggle
        document.addEventListener('DOMContentLoaded', function() {
            const mobileMenu = document.getElementById('mobile-menu');
            const navLinks = document.getElementById('nav-links');

            if (mobileMenu) {
                mobileMenu.addEventListener('click', function() {
                    navLinks.classList.toggle('active');

                    // Animate hamburger to X
                    const spans = mobileMenu.querySelectorAll('span');
                    if (navLinks.classList.contains('active')) {
                        spans[0].style.transform = 'rotate(45deg) translate(5px, 5px)';
                        spans[1].style.opacity = '0';
                        spans[2].style.transform = 'rotate(-45deg) translate(7px, -6px)';
                    } else {
                        spans[0].style.transform = 'none';
                        spans[1].style.opacity = '1';
                        spans[2].style.transform = 'none';
                    }
                });

                // Close menu when clicking on a link
                const links = navLinks.querySelectorAll('a');
                links.forEach(link => {
                    link.addEventListener('click', function() {
                        navLinks.classList.remove('active');
                        const spans = mobileMenu.querySelectorAll('span');
                        spans[0].style.transform = 'none';
                        spans[1].style.opacity = '1';
                        spans[2].style.transform = 'none';
                    });
                });
            }
        });

        // GSAP Animations
        gsap.registerPlugin(ScrollTrigger);

        // Add glowing borders to all input fields
        document.querySelectorAll("input").forEach(input => {
            gsap.to(input, {
                boxShadow: "0 0 10px rgba(41, 82, 163, 0.7), inset 0 2px 5px rgba(0, 0, 0, 0.1)",
                borderColor: "rgba(41, 82, 163, 0.7)",
                repeat: -1,
                yoyo: true,
                duration: 2
            });
        });

        // Add glow effect to all buttons
        document.querySelectorAll(".btn, .pagination-btn, .edit-btn, .delete-btn").forEach(btn => {
            gsap.to(btn, {
                boxShadow: "0 0 15px rgba(41, 82, 163, 0.8)",
                repeat: -1,
                yoyo: true,
                duration: 1.5
            });
        });

        // Special glow for submit button
        gsap.to(".submit-btn", {
            boxShadow: "0 0 20px rgba(41, 82, 163, 0.8)",
            repeat: -1,
            yoyo: true,
            duration: 1.5
        });

        // Special glow for home button
        gsap.to(".home-btn", {
            boxShadow: "0 0 20px rgba(41, 82, 163, 0.8)",
            repeat: -1,
            yoyo: true,
            duration: 1.5
        });

        // Special glow for attendance button
        gsap.to(".attendance-btn", {
            boxShadow: "0 0 20px rgba(0, 121, 107, 0.8)",
            repeat: -1,
            yoyo: true,
            duration: 1.5
        });

        // Special glow for edit buttons
        document.querySelectorAll(".edit-btn").forEach(btn => {
            gsap.to(btn, {
                boxShadow: "0 0 15px rgba(25, 118, 210, 0.8)",
                repeat: -1,
                yoyo: true,
                duration: 1.5
            });
        });

        // Special glow for delete buttons
        document.querySelectorAll(".delete-btn").forEach(btn => {
            gsap.to(btn, {
                boxShadow: "0 0 15px rgba(211, 47, 47, 0.8)",
                repeat: -1,
                yoyo: true,
                duration: 1.5
            });
        });

        // Form hover effect - simplified
        const form = document.querySelector(".registration-form");
        form.addEventListener("mouseenter", () => {
            gsap.to(form, {
                boxShadow: "0 20px 50px rgba(0, 0, 0, 0.4)",
                y: -5,
                duration: 0.3
            });
        });

        form.addEventListener("mouseleave", () => {
            gsap.to(form, {
                boxShadow: "0 10px 30px rgba(0, 0, 0, 0.2)",
                y: 0,
                duration: 0.3
            });
        });

        // Input field focus animations - simplified
        document.querySelectorAll("input").forEach(input => {
            input.addEventListener("focus", () => {
                gsap.to(input, {
                    boxShadow: "0 0 20px rgba(41, 82, 163, 0.8), inset 0 2px 5px rgba(0, 0, 0, 0.1)",
                    borderColor: "rgba(41, 82, 163, 1)",
                    y: -2,
                    duration: 0.2
                });

                // Animate the label
                const label = input.previousElementSibling;
                if (label && label.tagName === "LABEL") {
                    gsap.to(label, {
                        color: "rgba(255, 255, 255, 1)",
                        textShadow: "0 0 5px rgba(41, 82, 163, 0.5)",
                        duration: 0.2
                    });
                }
            });

            input.addEventListener("blur", () => {
                gsap.to(input, {
                    y: 0,
                    duration: 0.2
                });

                // Reset the label
                const label = input.previousElementSibling;
                if (label && label.tagName === "LABEL") {
                    gsap.to(label, {
                        color: "rgba(255, 255, 255, 0.9)",
                        textShadow: "none",
                        duration: 0.2
                    });
                }
            });
        });

        // Button hover animations - simplified
        document.querySelectorAll(".btn, .edit-btn, .delete-btn, .submit-btn, .pagination-btn").forEach(btn => {
            btn.addEventListener("mouseenter", () => {
                gsap.to(btn, {
                    scale: 1.05,
                    duration: 0.2
                });
            });

            btn.addEventListener("mouseleave", () => {
                gsap.to(btn, {
                    scale: 1,
                    duration: 0.2
                });
            });
        });

        // Table row hover effect - simplified
        document.querySelectorAll(".user-row").forEach(row => {
            row.addEventListener("mouseenter", () => {
                gsap.to(row, {
                    backgroundColor: "rgba(255, 255, 255, 0.15)",
                    duration: 0.2
                });
            });

            row.addEventListener("mouseleave", () => {
                gsap.to(row, {
                    backgroundColor: "rgba(0, 0, 0, 0)",
                    duration: 0.2
                });
            });
        });

        // Parallax effect for background - disable on mobile for performance
        window.addEventListener('scroll', () => {
            // Skip parallax on mobile devices for better performance
            if (window.innerWidth > 768) {
                const scrollY = window.scrollY;
                gsap.to('.project-content::before', {
                    backgroundPosition: `center ${scrollY * 0.5}px`,
                    ease: "none",
                    duration: 0.1
                });
            }
        });

        // Reduce animations on mobile for better performance
        function optimizeForMobile() {
            if (window.innerWidth <= 768) {
                // Disable some animations on mobile
                gsap.globalTimeline.getChildren().forEach(tween => {
                    // Keep essential animations but reduce others
                    if (tween.vars && tween.vars.repeat === -1) {
                        // Slow down infinite animations
                        tween.timeScale(0.7);
                    }
                });

                // Disable form hover animation on mobile
                const form = document.querySelector(".registration-form");
                if (form) {
                    form.removeEventListener("mouseenter", null);
                    form.removeEventListener("mouseleave", null);
                    gsap.set(form, { clearProps: "all" });
                }
            }
        }

        // Run optimization on load and resize
        window.addEventListener('load', optimizeForMobile);
        window.addEventListener('resize', optimizeForMobile);
    </script>
